<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightPink"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="142dp"
            android:layout_height="150dp"
            android:layout_margin="10dp">

            <Button
                android:id="@+id/btnAddMember"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="navigateToAddMember"
                android:text="Add Member" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="142dp"
            android:layout_height="150dp"
            android:layout_margin="10dp">

            <Button
                android:id="@+id/btnAddBook"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="navigateToAddBook"
                android:text="Add Book" />
        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="142dp"
            android:layout_height="150dp"
            android:layout_margin="10dp">

            <Button
                android:id="@+id/btnViewMember"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="navigateToViewMember"
                android:text="View Member" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="142dp"
            android:layout_height="150dp"
            android:layout_margin="10dp">

            <Button
                android:id="@+id/btnViewBook"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="navigateToViewBook"
                android:text="View Book" />
        </FrameLayout>

    </LinearLayout>

</LinearLayout>
